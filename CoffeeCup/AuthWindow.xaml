<Window x:Class="CoffeeCup.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthWindow" Height="225" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="textAuthUrl" Background="Transparent" BorderThickness="0"  IsReadOnly="True" TextWrapping="Wrap"/>
        <TextBox Grid.Row="1"  x:Name="GAccessCode" />
        <Button Grid.Row="2" Click="AuthOKClick" Content="Done" HorizontalAlignment="Left" Width="145"/>
        <Button Grid.Row="2" Click="AppExit" Content="Cancel" HorizontalAlignment="Right" Width="145"/>
    </Grid>
</Window>

<Window x:Class="CofeeCup.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AuthWindow" Height="225" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="textAuthUrl" Background="Transparent" BorderThickness="0"  IsReadOnly="True" TextWrapping="Wrap"/>
        <TextBox Grid.Row="1"  x:Name="GAccessCode" />
        <Button Grid.Row="2" Click="AuthOKClick"></Button> 
    </Grid>
</Window>
